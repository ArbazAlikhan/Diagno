@model DiagnosticMedicalCenter.Models.Admin

@{ ViewBag.Title = "Admin Login"; }
<h2 style="margin-top:80px;">Admin Login</h2>
@using (Html.BeginForm("Login", "AdminLogin", FormMethod.Post))
{
<div style="margin-top:20px;">
    <div class="form-group">
        @Html.Label("User Id")
        @Html.TextBox("UserId", null, new { @class = "form-control", id = "userId" })
    </div>
    <div class="form-group">
        @Html.Label("Password")
        @Html.Password("Password", null, new { @class = "form-control", id = "password" })
    </div>
    <div style="margin-bottom:30px;margin-top:20px;">
        <button class="btn btn-primary" type="submit" >Login</button>
        <button class="btn btn-warning" type="reset">Reset</button>
    </div>
    <div class="text-danger">
        <h4>@ViewBag.ValidationMessage</h4>
    </div>
</div>}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}