@model DiagnosticMedicalCenter.Models.Patient

@{ ViewBag.Title = "Patient Login"; }

<h2 style="margin-top:80px;">Patient Login</h2>
@using (Html.BeginForm("Login", "PatientLogin", FormMethod.Post))
{
<div style="margin-top:20px;">
    <div class="form-group">
        @Html.Label("User Id")
        @Html.TextBox("UserId", null, new { @class = "form-control", id = "userId" })
    </div>
    <div class="form-group">
        @Html.Label("Password")
        @Html.Password("Password", null, new { @class = "form-control", id = "password" })
    </div>
    <div style="margin-bottom:30px;margin-top:20px;">
        <button class="btn btn-primary" type="submit" id="Sumbit">Submit</button>
        <button class="btn btn-primary" type="reset" id="Sumbit">Reset</button>
    </div>
    <div class="text-danger">
        <h4>@ViewBag.ValidationMessage</h4>
    </div>
</div>}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}