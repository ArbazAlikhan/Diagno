@{
    ViewBag.Title = "viewDoctorId";
}

@using (Html.BeginForm())
{
    <div class="center">
        <h3 style="color:darkblue;">Available Doctors</h3>
        <table class="table" style="margin-top:30px;margin-bottom:30px;width:40%;">
            <thead>
                <tr>
                    <th>DoctorId</th>
                    <th>Name</th>
                    
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                string id = item.DoctorId.ToString();
                <tbody>
                    <tr>
                        <td><h3>@Html.ActionLink(id, "ListDoctors", "PatientLogin", new { docId = item.DoctorId }, null)</h3></td>
                        <td>@item.FirstName</td>
                       
                    </tr>
                </tbody>
            }

        </table>
        <h4 style="color:red">* click on Doctor Id to know more about them</h4>
    </div>
    <div>
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Login","PatientLogin")'">Back</button>
    </div>
}