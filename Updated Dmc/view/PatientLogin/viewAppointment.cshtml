@{
    ViewBag.Title = "viewAppointment";
}

@using (Html.BeginForm())
{
    <div class="center">
        <h3 style="color:darkblue;">Available Appointments</h3>
        <table class="table" style="margin-top:30px;margin-bottom:30px;width:40%;">
            <thead>
                <tr>
                    <th>AppointmentId</th>
                    <th>Doctor Name</th>

                </tr>
            </thead>
            @foreach (var item in Model)
            {
                string id = item.AppointmentId.ToString();
                <tbody>
                    <tr>
                        <td><h4>@Html.ActionLink(id, "ListAppointments", "PatientLogin", new { appointId = item.AppointmentId }, null)</h4></td>
                        <td>@item.DoctorName</td>

                    </tr>
                </tbody>
            }

        </table>
        <h4 style="color:red">* click on Appointment Id to know more about them</h4>
    </div>
    <div>
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Login","PatientLogin")'">Back</button>
    </div>
}